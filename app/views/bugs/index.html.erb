<div id="main" class="container">

  <% if !notice.blank? %>
    <p id="notice" class="alert alert-success"><%= notice %></p>
  <% end %>

  <h1>Bugs</h1>

  <table class="table table-hover table-mobile">
    <thead>
      <tr>
        <th>User</th>
        <th>Title</th>
        <th>Description</th>
        <th>Issue type</th>
        <th>Priority</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @bugs.each do |bug| %>
        <tr>
          <td>
            <%= (bug.user.try(:fname)) %> <%= (bug.user.try(:lname) || "N/A") %>
          </td>
          <td><%= bug.title %></td>
          <td><%= bug.description %></td>
          <td><%= bug.issue_type %></td>
          <td><%= bug.priority %></td>
          <td><%= bug.status %></td>
          <td class="nowrap">
            <%= link_to bug, class: "btn btn-default btn-sm" do %>
              Show
            <% end %>
         
            <%= link_to edit_bug_path(bug), class: "btn btn-default btn-sm" do %>
              Edit
            <% end %>
          
            <%= link_to bug, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger btn-sm" do %>
              Delete
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Bug', new_bug_path, :class => "btn btn-primary" %>
</div>